{
  "name": "invoice-app",
  "private": true,
  "version": "1.0.0",
  "description": "Application de gestion de factures pour la CMDT - Compagnie Malienne pour le DÃ©veloppement des Textiles",
  "author": "Dioman Keita",
  "main": "main.js",
  "scripts": {
    "dev": "npm run dev --prefix client",
    "build": "npm run build --prefix client",
    "preview": "npm run preview --prefix client",
    "dist": "npm run build --prefix client && npm run build --prefix server && electron-builder",
    "electron:dev": "concurrently \"npm run dev --prefix client\" \"electron .\""
  },
  "build": {
    "appId": "com.invoice-app.app",
    "productName": "Invoice App",
    "icon": "client/public/cmdt_icone.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "client/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*",
          "!node_modules",
          "!src",
          "!test",
          "!tsconfig.json"
        ]
      },
      {
        "from": "server/node_modules",
        "to": "server/node_modules"
      },
      {
        "from": "server/dist",
        "to": "server/dist"
      },
      {
        "from": "client/dist",
        "to": "client/dist"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "protocols": [
      {
        "name": "invoice-app",
        "schemes": [
          "invoice-app"
        ]
      }
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/express": "^5.0.3",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.38.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.4"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "finalhandler": "^2.1.1",
    "http-proxy": "^1.18.1",
    "serve-static": "^2.2.0"
  }
}
