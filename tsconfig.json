{
    "compilerOptions": {
      "target": "ES2018",
      "lib": ["ES2018", "DOM"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "resolveJsonModule": true
    },
    "include": ["server/**/*"],
    "exclude": ["node_modules", "dist", "client"]
  }
  